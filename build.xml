<project>
<target name="clean">
<delete dir="src"/>
</target>
<target name="compile">
<mkdir dir="classes"/>
<javac srcdir="src" destdir="classes"/>
</target>
<target name="jar">
<mkdir dir="jar"/>
<jar destfile="jar/sample.jar" basedir="sample/classes">
<manifest>
<attribute name="Main-Class" value="sample"/>
</manifest>
</jar>
</target>
<target name="run">
<java jar="jar/sample.jar" fork="true"/>
</target>
</project>
