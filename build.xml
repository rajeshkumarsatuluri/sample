<project>
<target name="clean">
<delete dir="samplejava"/>
</target>
<target name="compile">
<mkdir dir="classes"/>
<javac srcdir="." destdir="classes"/>
</target>
<target name="jar">
<mkdir dir="jar"/>
<jar destfile="jar/sample.jar" basedir="classes">
<manifest>
<attribute name="Main-Class" value="sample"/>
</manifest>
</jar>
</target>
<target name="run">
<java jar="jar/sample.jar" fork="true"/>
</target>
 <emma enabled="true">
     <instr instrpath="${class.dir}" destdir="${instrumented.dir}" metadatafile="${coverage.dir}/metadata.emma" merge="true">
         <filter excludes="au.com.jenisys.view.*"/>
     </instr>
 </emma>
</project>
